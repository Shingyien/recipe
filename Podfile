# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Recipe' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Recipe
  
  # Realm
  pod 'RealmSwift'
  
  # Image download, loading and caching tool
  pod 'Kingfisher'
  
  # Firebase Auth
  pod 'FirebaseUI/Auth'
  pod 'FirebaseUI/Anonymous'
  pod 'FirebaseUI/Email'
  pod 'FirebaseStorage'
  
  # Keychain tool for storing sensitive info
  # READ: https://github.com/evgenyneu/keychain-swift for usage
  pod 'KeychainSwift', '~> 15.0'

  target 'RecipeTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'RecipeUITests' do
    # Pods for testing
  end

end
